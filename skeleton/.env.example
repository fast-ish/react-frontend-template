# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# Grafana Faro (Frontend Observability)
NEXT_PUBLIC_FARO_URL=https://faro-collector.yourcompany.com/collect
NEXT_PUBLIC_FARO_APP_NAME=${{values.name}}
NEXT_PUBLIC_FARO_APP_VERSION=0.1.0
NEXT_PUBLIC_FARO_ENVIRONMENT=development

{%- if values.analytics == "posthog" %}
# PostHog
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
{%- endif %}

{%- if values.analytics == "mixpanel" %}
# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=
{%- endif %}

{%- if values.featureFlags == "launchdarkly" %}
# LaunchDarkly
NEXT_PUBLIC_LD_CLIENT_ID=
{%- endif %}

{%- if values.authentication == "cognito" %}
# AWS Cognito
NEXT_PUBLIC_COGNITO_USER_POOL_ID=
NEXT_PUBLIC_COGNITO_CLIENT_ID=
NEXT_PUBLIC_COGNITO_DOMAIN=
{%- endif %}

{%- if values.authentication == "auth0" %}
# Auth0
AUTH0_SECRET=
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
{%- endif %}

{%- if values.authentication == "nextauth" %}
# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=
{%- endif %}

{%- if values.aiClient == "vercel-ai" %}
# AI
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
{%- endif %}
