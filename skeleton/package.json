{
  "name": "${{values.name}}",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    {%- if values.testRunner == "vitest" %}
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    {%- else %}
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    {%- endif %}
    {%- if values.e2eTesting == "playwright" %}
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:codegen": "playwright codegen",
    {%- elif values.e2eTesting == "cypress" %}
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    {%- endif %}
    "validate": "npm run typecheck && npm run lint && npm run test",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "^{%- if values.nextVersion == '15' %}15.0.3{%- else %}14.2.18{%- endif %}",
    "react": "^{%- if values.nextVersion == '15' %}19.0.0{%- else %}18.3.1{%- endif %}",
    "react-dom": "^{%- if values.nextVersion == '15' %}19.0.0{%- else %}18.3.1{%- endif %}",
    {%- if values.styling == "tailwind" %}
    "tailwindcss": "^3.4.15",
    "tailwindcss-animate": "^1.0.7",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    {%- endif %}
    {%- if values.styling == "styled-components" %}
    "styled-components": "^6.1.13",
    {%- endif %}
    {%- if values.uiLibrary == "shadcn" %}
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5",
    "lucide-react": "^0.460.0",
    "@radix-ui/react-slot": "^1.1.0",
    {%- endif %}
    {%- if values.uiLibrary == "radix" %}
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@radix-ui/react-slot": "^1.1.0",
    {%- endif %}
    {%- if values.stateManagement == "zustand" %}
    "zustand": "^5.0.1",
    {%- endif %}
    {%- if values.stateManagement == "jotai" %}
    "jotai": "^2.10.3",
    {%- endif %}
    {%- if values.stateManagement == "redux" %}
    "@reduxjs/toolkit": "^2.3.0",
    "react-redux": "^9.1.2",
    {%- endif %}
    {%- if values.dataFetching == "tanstack-query" %}
    "@tanstack/react-query": "^5.62.2",
    "@tanstack/react-query-devtools": "^5.62.2",
    {%- endif %}
    {%- if values.dataFetching == "swr" %}
    "swr": "^2.2.5",
    {%- endif %}
    {%- if values.formLibrary == "react-hook-form" %}
    "react-hook-form": "^7.53.2",
    "zod": "^3.23.8",
    "@hookform/resolvers": "^3.9.1",
    {%- endif %}
    {%- if values.formLibrary == "formik" %}
    "formik": "^2.4.6",
    "yup": "^1.4.0",
    {%- endif %}
    {%- if values.authentication == "cognito" %}
    "@aws-amplify/auth": "^6.7.0",
    "aws-amplify": "^6.8.0",
    {%- endif %}
    {%- if values.authentication == "auth0" %}
    "@auth0/nextjs-auth0": "^3.5.0",
    {%- endif %}
    {%- if values.authentication == "nextauth" %}
    "next-auth": "^5.0.0-beta.25",
    {%- endif %}
    "@grafana/faro-web-sdk": "^1.10.0",
    "@grafana/faro-web-tracing": "^1.10.0",
    {%- if values.analytics == "posthog" %}
    "posthog-js": "^1.188.0",
    {%- endif %}
    {%- if values.analytics == "mixpanel" %}
    "mixpanel-browser": "^2.55.1",
    {%- endif %}
    {%- if values.featureFlags == "launchdarkly" %}
    "@launchdarkly/js-client-sdk": "^3.4.0",
    {%- endif %}
    {%- if values.i18n %}
    "next-intl": "^3.25.1",
    {%- endif %}
    {%- if values.aiClient == "vercel-ai" %}
    "ai": "^4.0.8",
    "@ai-sdk/openai": "^1.0.7",
    "@ai-sdk/anthropic": "^1.0.5",
    {%- endif %}
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^{%- if values.nextVersion == '15' %}19.0.1{%- else %}18.3.12{%- endif %}",
    "@types/react-dom": "^{%- if values.nextVersion == '15' %}19.0.1{%- else %}18.3.1{%- endif %}",
    "typescript": "^5.7.2",
    "eslint": "^9.15.0",
    "eslint-config-next": "^{%- if values.nextVersion == '15' %}15.0.3{%- else %}14.2.18{%- endif %}",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    {%- if values.testRunner == "vitest" %}
    "vitest": "^2.1.6",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.6",
    "@vitest/ui": "^2.1.6",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^25.0.1",
    {%- else %}
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    {%- endif %}
    {%- if values.e2eTesting == "playwright" %}
    "@playwright/test": "^1.49.0",
    {%- endif %}
    {%- if values.e2eTesting == "cypress" %}
    "cypress": "^13.16.0",
    {%- endif %}
    {%- if values.styling == "styled-components" %}
    "@types/styled-components": "^5.1.34",
    {%- endif %}
    {%- if values.analytics == "mixpanel" %}
    "@types/mixpanel-browser": "^2.50.2",
    {%- endif %}
    {%- if values.pwa %}
    "next-pwa": "^5.6.0",
    {%- endif %}
    "bundlewatch": "^0.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "bundlewatch": {
    "files": [
      {
        "path": ".next/static/**/*.js",
        "maxSize": "250kB"
      }
    ]
  },
  "engines": {
    "node": ">=${{values.nodeVersion}}.0.0"
  }
}
